# SwiftFormat configuration
# See https://github.com/nicklockwood/SwiftFormat for all options

--swiftversion 5.9

# Rules
--enable assertionFailures
--enable blankLineAfterImports
--enable blankLinesAfterGuardStatements
--enable blankLinesAroundMark
--enable blankLinesBetweenChainedFunctions
--enable blankLinesBetweenImports
--enable blankLinesBetweenScopes
--enable conditionalAssignment
--enable consecutiveBlankLines
--enable consecutiveSpaces
--enable consistentSwitchCaseSpacing
--enable docComments
--enable duplicateImports
--enable elseOnSameLine
--enable enumNamespaces
--enable fileHeader
--enable headerFileName
--enable indent
--enable initCoderUnavailable
--enable isEmpty
--enable leadingDelimiters
--enable modifierOrder
--enable modifiersOnSameLine
--enable noForceTryInTests
--enable noForceUnwrapInTests
--enable numberFormatting
--enable preferCountWhere
--enable preferFinalClasses
--enable preferForLoop
--enable preferKeyPath
--enable preferSwiftTesting
--enable privateStateVariables
--enable redundantAsync
--enable redundantBackticks
--enable redundantBreak
--enable redundantClosure
--enable redundantEquatable
--enable redundantExtensionACL
--enable redundantFileprivate
--enable redundantGet
--enable redundantInit
--enable redundantInternal
--enable redundantLet
--enable redundantLetError
--enable redundantMemberwiseInit
--enable redundantNilInit
--enable redundantObjc
--enable redundantOptionalBinding
--enable redundantParens
--enable redundantPattern
--enable redundantProperty
--enable redundantPublic
--enable redundantRawValues
--enable redundantReturn
--enable redundantSelf
--enable redundantStaticSelf
--enable redundantThrows
--enable redundantType
--enable redundantTypedThrows
--enable redundantVoidReturnType
--enable semicolons
--enable singlePropertyPerLine
--enable sortImports
--enable sortSwitchCases
--enable sortTypealiases
--enable swiftTestingTestCaseNames
--enable trailingClosures
--enable trailingCommas
--enable unusedPrivateDeclarations
--enable urlMacro
--enable void
--enable wrap
--enable wrapArguments
--enable wrapAttributes
--enable wrapConditionalBodies
--enable wrapEnumCases
--enable wrapLoopBodies
--enable wrapMultilineConditionalAssignment
--enable wrapMultilineFunctionChains
--enable wrapMultilineStatementBraces
--enable wrapSingleLineComments
--enable wrapSwitchCases
--enable yodaConditions

# Config
--closingparen balanced
--commas always
--date-format iso
--emptybraces spaced
--extensionacl on-extension
--header "//\n// {file}\n//\n// Copyright Â© {created.year} {author.name}.\n"
--ifdef indent
--importgrouping testable-bottom
--indent 4
--indentcase false
--init-coder-nil true
--line-between-guards true
--marktypes always
--maxwidth 120
--modifierorder
--nospaceoperators ..<, ...
--operatorfunc spaced
--patternlet hoist
--ranges spaced
--redundant-async always
--self remove
--selfrequired
--semicolons inline
--stripunusedargs closure-only
--tabwidth 4
--trailing-commas always
--trimwhitespace always
--voidtype void
--wraparguments before-first
--wrapcollections before-first
--wrapparameters before-first
--wrapternary before-operators
--xcodeindentation enabled
